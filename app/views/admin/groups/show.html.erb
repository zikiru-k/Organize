<div class="container">
  <h1>グループ詳細</h1>

  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <div class="card">
        <div class="card-body">

          <div class="row mb-10">
            <p class="col-4">グループ名</p>
            <p class="col-4"><%= @group.name %></p>
          </div>

          <div class="row mb-10">
            <p class="col-4">紹介文</p>
            <p class="col-4"><%= @group.content %></p>
          </div>

          <div class="row mb-10">
            <p class="col-4">グループ作成者</p>
            <p class="col-4"><%= @group.owner.last_name %></p>
          </div>

          <div class="row mb-10">
            <p class="col-4">グループメンバー</p>
            <% @group.group_users.each do |group_user| %>
              <p class="col-4"><%= group_user.customer.last_name %></p>
            <% end %>
          </div>

          <div class="d-flex justify-content-around">
            <%= link_to "編集", edit_admin_group_path(@group), class:"btn btn-primary" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>