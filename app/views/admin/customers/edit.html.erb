<div class="container">
  <h1>会員編集</h1>
  <div class="row">
    <div class="col">
      <%= form_with model: @customer, url: edit_admin_customer_path, method: :patch, local: true do |f| %>
        <form class="form-horizontal">

          <div class="form-group row">
            <%= f.label :last_name, "苗字", class: "col-sm-3 control-label" %>
            <div class="col-sm-5">
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :first_name, "名前", class: "col-sm-3 control-label" %>
            <div class="col-sm-5">
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "col-sm-3 control-label" %>
            <div class="col-sm-5">
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :telephone_number, "電話番号", class: "col-sm-3 control-label" %>
            <div class="col-sm-5">
              <%= f.text_field :telephone_number, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label "会員ステータス", class: "control-label" %>
            <div>
              <%= f.radio_button :is_active, true, class: "form-check-input" %>
              <%= f.label :is_active, "有効", class: "form-check-label mr-3" %>
            </div>
            <div>
              <%= f.radio_button :is_active, false, class: "form-check-input" %>
              <%= f.label :is_active, "退会", class: "form-check-label" %>
            </div>
          </div>

          <div class="text-center my-5 ">
            <%= f.submit "変更", class: "btn btn-primary" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>