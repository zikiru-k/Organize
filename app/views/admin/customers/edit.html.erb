<div class="container">
  <h1>会員編集</h1>
  <div class="row">
    <div class="col">
      <%= form_with model: @customer, url: customers_information_edit_path, method: :patch,  local: true do |f| %>
        <div>
          <%= f.label :"氏名", class:"control-label" %>
          <%= f.label :last_name, "苗字", class:"control-label" %>
          <%= f.text_field :last_name, class:"form-control" %>
          <%= f.label :first_name, "名前", class:"control-label" %>
          <%= f.text_field :first_name, class:"form-control" %>
        </div>

        <div>
          <%= f.label :email, "メールアドレス", class:"control-label" %>
          <%= f.text_field :email, class:"form-control" %>
        </div>

        <div>
          <%= f.label :telephone_number, "電話番号", class:"control-label" %>
          <%= f.text_field :telephone_number, class:"form-control" %>
        </div>

        <div>
          <%= f.label "会員ステータス" %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "退会" %>
        </div>

        <div>
          <%= f.submit "変更" %>
        </div>
      <% end %>
    </div>
  </div>
</div>