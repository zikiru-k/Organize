<% if comment.bookmark_by?(current_admin) %>
  <%= link_to admin_group_order_comment_bookmarks_path(comment.order.group_id, comment.order, comment), method: :delete,remote: true do %>
    <i class="fa-regular fa-square-check" aria-hidden="true" style="color: red;"></i>
    <%= comment.bookmarks.count %>人が確認しました。
  <% end %>
<% else %>
  <%= link_to admin_group_order_comment_bookmarks_path(comment.order.group_id, comment.order, comment), method: :post,remote: true do %>
    <i class="fa-solid fa-square-check" aria-hidden="true"></i>
    <%= comment.bookmarks.count %>人が確認しました。
  <% end %>
<% end %>