<div class="container">
  <h1>グループ編集</h1>
  
  <%= form_with model: @group, url: group_path, method: :patch, local: true do |f| %>
    <div class="form-group">
      <%= f.label :"グループ名", class:"control-label" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :"紹介文", class:"control-label" %>
      <%= f.text_field :content, class:"form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.submit :"変更", class: "btn btn-info" %>
    </div>
  <% end %>
</div>