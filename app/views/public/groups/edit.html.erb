<div class="container">
  <h1>グループ編集</h1>

  <%= form_with model: @group, url: group_path, method: :patch, local: true do |f| %>
    <div class="card">
      <div class="card-body d-flex flex-column">
        <form class="form-horizontal d-flex justify-content-center">
          <div class="form-group my-3 d-flex align-items-center offset-2">
            <%= f.label :name, "グループ名：", class:"col-sm-3 m-0 control-label" %>
            <div class="col-sm-4">
              <%= f.text_field :name, class:"form-control" %>
            </div>
          </div>

          <div class="form-group my-3 d-flex align-items-center offset-2">
            <%= f.label :content, "紹介文：", class:"col-sm-3 m-0 control-label" %>
            <div class="col-sm-4">
              <%= f.text_field :content, class:"form-control" %>
            </div>
          </div>

          <div class="d-flex justify-content-around mt-3">
            <%= f.submit :"変更", class: "btn btn-info" %>
          </div>
        </form>
      </div>
    </div>
  <% end %>
</div>