<div class="container">
  <h1>グループ一覧</h1>
  <%= link_to "グループ作成", new_group_path %>
  <%= link_to "登録済み商品", items_path %>
  <%= link_to 'タグ一覧', tags_path %>

  <div class="row">
    <div class="col-3">
      <div class="card my-3 text-center">
        <div class="card-body">
          <% @groups.each do |group| %>
            <div>
              <p>グループ名</p>
              <p><%= link_to group.name, group_orders_path(group) %></p>
              <p>紹介文</p>
              <p><%= group.content %></p>
              <p><%= link_to "グループ詳細", group_path(group) %></p>
              <% if group.is_owned_by?(current_customer) %>
                <%= link_to "編集", edit_group_path(group) %>
              <% elsif group.include_customer?(current_customer) %>
                <%= link_to "退会", group_group_users_path(group), method: :delete %>
              <% else %>
                <%= link_to "参加", group_group_users_path(group), method: :post %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>