<div class="container">
  <h1>商品登録</h1>
  <%= render 'layouts/errors', model: @item %>

  <div class="row">
    <div class="offreset col-md-10 offset-1">
      <%= form_with model: @item, url: group_items_path, method: :post, local: true do |f| %>
        <form class="form-horizontal d-flex justify-content-center">
          <div class="card">
            <div class="card-body d-flex flex-column">
              <div class="form-group my-3 d-flex justify-content-center align-items-center">
                <%= f.label :name, "商品名：", class:"col-sm-4 col-md-3 m-0 control-label" %>
                <div class="col-sm-7">
                  <%= f.text_field :name, class:"form-control" %>
                </div>
              </div>

              <div class="form-group my-3 d-flex justify-content-center align-items-center">
                <%= f.label :site, "購入先サイト：", class:"col-sm-4 col-md-3 m-0 control-label" %>
                <div class="col-sm-7">
                  <%= f.text_field :site, class:"form-control" %>
                </div>
              </div>

              <div class="form-group my-3 d-flex justify-content-center align-items-center">
                <%= f.label :code, "コード：", class:"col-sm-4 col-md-3 control-label" %>
                <div class="col-sm-7">
                  <%= f.text_field :code, class:"form-control" %>
                </div>
              </div>

              <div class="form-group my-3 d-flex justify-content-center align-items-center">
                <%= f.label :capacity, "内容量：", class:"col-sm-4 col-md-3 control-label" %>
                <div class="col-sm-7">
                  <%= f.text_field :capacity, class:"form-control" %>
                </div>
              </div>

              <div class="mt-3 d-flex justify-content-center align-items-center">
                <%= f.label :tag, "タグ：", class:"col-sm-4 col-md-3 control-label" %>
                <div class="col-sm-7">
                  <%# Edit用に@item.tags.pluck(:name)でタグの配列を取得 %>
                  <%= f.text_field :tag, value: @item.tags.pluck(:name), class:"form-control" %>
                </div>
              </div>
              <small id="small-text-new">スペースで区切ることで複数指定できます。</small>

              <div class="d-flex justify-content-around text-center mt-3">
                <%= link_to "登録しない", group_items_path(params[:group_id]), class:"btn btn-secondary" %>
                <%= f.submit "登録する", class: "btn btn-info" %>
              </div>
            </div>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>