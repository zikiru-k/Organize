<div class="container">
  <h1>登録済み商品</h1>
  <%= link_to "商品登録", new_item_path %>

  <% @items.each do |item| %>
    <div>
      <p>商品名</p>
      <p><%= link_to item.name, item_path(item) %></p>

      <p>購入先サイト</p>
      <p><%= item.site %></p>

      <p>コード</p>
      <p><%= item.code %></p>

      <p>タグ</p>
      <ul>
        <%# 該当のPostからアソシエーションでタグを取得 %>
        <% item.tags.each do |tag| %>
          <%# タグを展開 %>
          <li>
            <%= link_to tag.name, tag_path(tag) %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>