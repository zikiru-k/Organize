<div class="container">
  <h1>検索結果</h1>
  <% @results.each do |result| %>
    <div class="row d-flex justify-content-center">
      <div class="col-8">
        <div class="card">
          <div class="card-body">

            <div class="d-flex justify-content-center align-items-center my-3 mb-10">
              <p class="col-3">商品名：</p>
              <p class="col-5"><%= result.name %></p>
            </div>

            <div class="d-flex justify-content-center align-items-center my-3 mb-10">
              <p class="col-3">購入先サイト：</p>
              <p class="col-5"><%= result.site %></p>
            </div>

            <div class="d-flex justify-content-center align-items-center my-3 mb-10">
              <p class="col-3">コード：</p>
              <p class="col-5"><%= result.code %></p>
            </div>

            <div class="d-flex justify-content-center align-items-center my-3 mb-10">
              <p class="col-3">内容量：</p>
              <p class="col-5"><%= result.capacity %></p>
            </div>

            <div class="d-flex justify-content-center align-items-center my-3 mb-10">
              <p class="col-3">タグ：</p>
              <ul class="cp_list d-flex justify-content-start col-5">
                <% result.tags.each do |tag| %>
                  <li>
                    <%= link_to tag.name, group_tags_path(params[:group_id], tag) %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="d-flex justify-content-around mt-3">
    <%= link_to "商品一覧に戻る", group_items_path(params[:group_id]), class:"btn btn-secondary" %>
  </div>
</div>