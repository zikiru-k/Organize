<div class="container">
  <h1>発注/在庫状況</h1>
  <%= link_to "発注願い作成", new_group_order_path %>
  <%= link_to "登録済み商品", group_items_path(params[:group_id]) %>
  <%= link_to "タグ一覧", group_tags_path(params[:group_id]) %>

  <%# 現在の登録数を表示する。“#{}”は、Rubyの式展開 %>
  <%#= "登録アルバム数 : #{@orders.count}" %>

  <%# @ordersでレコードが1件もない場合の分岐 %>
  <% if @orders.count == 0 %>
    <%# @ordersにデータがない場合の表示 %>
    <p>発注情報はありません</p>
  <% else %>
    <%# @ordersにレコードがある場合、タイトルを表示する %>
    <% @orders.each do |order| %>
      <p>
        <%= link_to order.created_at.in_time_zone('Asia/Tokyo').strftime('%Y年%m月%d日 %H時%M分'), group_order_path(order.group_id, order) %>
      </p>
    <% end %>
  <% end %>
</div>