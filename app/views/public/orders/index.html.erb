<div class="container">
  <h1>発注/在庫状況</h1>
  <div class="d-flex justify-content-around">
    <%= link_to "発注願い作成", new_group_order_path, class:"btn btn-primary" %>
    <%= link_to "登録済み商品", group_items_path(params[:group_id]), class:"btn btn-primary" %>
    <%= link_to "タグ一覧", group_tags_path(params[:group_id]), class:"btn btn-primary" %>
  </div>



  <%# @ordersでレコードが1件もない場合の分岐 %>
  <% if @orders.count == 0 %>
    <%# @ordersにデータがない場合の表示 %>
    <p class="mt-3">発注情報はありません</p>
  <% else %>
    <%# @ordersにレコードがある場合、タイトルを表示する %>
    <div class="d-flex justify-content-center">
      <table class="table table-bordered mt-3" style="width: 80%">
        <thead class="text-center thead-light">
          <th style="width: 50%">発注日</th>
          <th style="width: 50%">発注状況</th>
        </thead>
        <% @orders.each do |order| %>
          <tbody class="text-center bg-white">
            <td style="width: 50%"><%= link_to order.created_at.in_time_zone('Asia/Tokyo').strftime('%Y年%m月%d日 %H時%M分'), group_order_path(order.group_id, order) %></td>
            <td style="width: 50%"><%= order.stats_i18n %></td>
          </tbody>
        <% end %>
      </table>
    </div>
  <% end %>
</div>