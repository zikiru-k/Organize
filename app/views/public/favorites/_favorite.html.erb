<% if item.favorite_by?(current_customer) %>
  <%= link_to group_item_favorites_path(item.group_id, item), method: :delete, remote: true do %>
    <i class="fa-solid fa-star" aria-hidden="true" style="color: yellow;"></i>
  <% end %>
<% else %>
  <%= link_to group_item_favorites_path(item.group_id, item), method: :post, remote: true do %>
    <i class="fa-solid fa-star" aria-hidden="true" style="color: black;"></i>
  <% end %>
<% end %>