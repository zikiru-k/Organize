<div class="container">
  <h1>新規会員登録</h1>
  <%= render 'layouts/errors', model: @customer %>

  <div class="row mt-4 d-flex justify-content-center">
    <div class="col-md-7 col-lg-6">
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>

        <form action="#">
          <div class="row">
            <!-- 苗字 -->
            <div class="input-group col-lg-6 mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white px-4 border-md border-right-0">
                  <i class="fa fa-user text-muted"></i>
                </span>
              </div>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "last_name",class:"form-control bg-white border-left-0 border-md" %>
            </div>

            <!-- 名前 -->
            <div class="input-group col-lg-6 mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white px-4 border-md border-right-0">
                  <i class="fa fa-user text-muted"></i>
                </span>
              </div>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder: "first_name",class:"form-control bg-white border-left-0 border-md" %>
            </div>

            <!-- アドレス -->
            <div class="input-group col-lg-12 mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white px-4 border-md border-right-0">
                  <i class="fa fa-envelope text-muted"></i>
                </span>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "Email Address",class:"form-control bg-white border-left-0 border-md" %>
            </div>

            <!-- 電話番号 -->
            <div class="input-group col-lg-12 mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white px-4 border-md border-right-0">
                  <i class="fa fa-phone-square text-muted"></i>
                </span>
              </div>
              <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "Phone Number",class:"form-control bg-white border-md border-left-0" %>
            </div>

            <!-- パスワード -->
            <div class="input-group col-lg-12 mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white px-4 border-md border-right-0">
                  <i class="fa fa-lock text-muted"></i>
                </span>
              </div>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class:"form-control bg-white border-left-0 border-md", id: "password-field" %>
              <span toggle="#password-field" class="toggle-password"><i class="fa-solid fa-eye-slash"></i></span>
            </div>

            <!-- パスワード確認用 -->
            <div class="input-group col-lg-12 mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text bg-white px-4 border-md border-right-0">
                  <i class="fa fa-lock text-muted"></i>
                </span>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-passwordn", placeholder: "passwordConfirmation", class:"form-control bg-white border-left-0 border-md", id: "password-onfirmation-field" %>
              <span toggle="#password-onfirmation-field" class="toggle-password"><i class="fa-solid fa-eye-slash"></i></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group col-lg-12 mx-auto mb-0">
              <%= f.submit "新規登録", class:"btn btn-primary btn-block py-2 font-weight-bold" %>
            </div>

            <!-- Divider Text -->
            <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
              <div class="border-bottom w-100 ml-5"></div>
              <span class="px-2 small text-muted font-weight-bold text-muted">OR</span>
              <div class="border-bottom w-100 mr-5"></div>
            </div>

            <!-- ログイン画面に移行 -->
            <div class="text-center w-100">
              <p class="text-muted font-weight-bold">既に登録済みの方は <%= link_to "こちら", new_customer_session_path %> からログインしてください</p>
            </div>

          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function () {
    $('input, select').on('focus', function () {
      $(this).parent().find('.input-group-text').css('border-color', '#80bdff');
    });
    $('input, select').on('blur', function () {
      $(this).parent().find('.input-group-text').css('border-color', '#ced4da');
    });
  });

  // パスワードの目のアイコン関係
  $(document).ready(function() {
    $(".toggle-password").click(function() {
      var $icon = $(this).find('i');
      $icon.toggleClass("fa-eye fa-eye-slash");
      var $input = $($(this).attr("toggle"));
      if ($input.attr("type") == "password") {
        $input.attr("type", "text");
      } else {
        $input.attr("type", "password");
      }
    });
  });
</script>