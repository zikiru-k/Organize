<div class="container">
  <h1>マイページ</h1>
  <div class="row">
    <div class="offreset col-md-6 offset-1">
      <div class="card">
        <div class="card-body px-0">
          <div class="d-flex justify-content-center align-items-center">
            <p class="col-4">氏名：</p>
            <p class="col-5"><%= @customer.full_name %></p>
          </div>
          <div class="d-flex justify-content-center align-items-center">
            <p class="col-4">メールアドレス：</p>
            <p class="col-5"><%= @customer.email %></p>
          </div>
          <div class="d-flex justify-content-center align-items-center">
            <p class="col-4">電話番号：</p>
            <p class="col-5"><%= @customer.telephone_number %></p>
          </div>
          <div class="text-center">
            <%= link_to "編集", customers_information_edit_path, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <p>参加中のグループ</p>
          <ul>
            <% @join_groups.each do |group| %>
              <li><%= link_to group.group.name, group_orders_path(group.group) %></li>
            <% end %>
          </ul>

          <p>作成したグループ</p>
          <ul>
            <% @created_groups.each do |group| %>
              <li><%= link_to group.name, group_orders_path(group) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>