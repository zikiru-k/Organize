<div class="container">
  <h1>マイページ編集</h1>

  <%= form_with model: @customer, url: customers_information_path, method: :patch,  local: true do |f| %>
    <div class="card">
      <div class="card-body d-flex flex-column">
        <form class="form-horizontal d-flex justify-content-center">

          <div class="form-group my-3 d-flex align-items-center offset-2">
            <%= f.label :"氏名", class:"col-sm-2 m-0 control-label" %>
            <div class="col-1 text-right">
              <%= f.label :last_name, "苗字", class:"m-0 control-label" %>
            </div>
            <div class="col-sm-2">
              <%= f.text_field :last_name, class:"form-control" %>
            </div>
            <div class="col-1 text-right">
              <%= f.label :first_name, "名前", class:"m-0 control-label" %>
            </div>
            <div class="col-sm-2">
              <%= f.text_field :first_name, class:"form-control" %>
            </div>
          </div>

          <div class="form-group my-3 d-flex align-items-center offset-2">
            <%= f.label :email, "メールアドレス", class:"col-sm-3 m-0 control-label" %><br />
            <div class="col-sm-4">
              <%= f.text_field :email, class:"form-control" %>
            </div>
          </div>

          <div class="form-group my-3 d-flex align-items-center offset-2">
            <%= f.label :telephone_number, "電話番号", class:"col-sm-3 m-0 control-label" %><br />
            <div class="col-sm-4">
              <%= f.text_field :telephone_number, class:"form-control" %>
            </div>
          </div>

          <!--<div class="text-center mt-3 mb-5">-->
          <div class="d-flex justify-content-around mt-3">
            <%= f.submit "変更", class:"btn btn-primary" %>
            <%= link_to "退会", customers_unsubscribe_path, class:"btn btn-danger" %>
          </div>

        </form>
      </div>
    </div>
  <% end %>
</div>
